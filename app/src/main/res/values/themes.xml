<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CityGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_black</item>
        <item name="colorPrimaryVariant">@color/new_white</item>
        <item name="colorOnPrimary">@color/new_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_black</item>
        <item name="colorSecondaryVariant">@color/new_black</item>
        <item name="colorOnSecondary">@color/new_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/new_white</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.CityGuide">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>
</resources>